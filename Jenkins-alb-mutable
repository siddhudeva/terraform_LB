pipeline {
    agent {
        label  'WORKSTATION'
    }
    options {
        ansiColor('xterm')
    }
    parameters {
        choice(name: 'ENVIRONMENT', choices: ['', 'dev', 'prod'], description: 'Pick Environment')
//        string(name: 'COMPONENT', defaultValue: '', description: 'Choose a component to Proceed')
    }
    stages {

            stage('Get Git Repo') {
                steps {
                    dir('terraform-alb') {
                        git branch: 'main', url: "https://github.com/siddhudeva/terraform_LB.git"
                    }
                }
            }
            stage('apply terraform') {
                steps {
                    dir('terraform-alb') {
                        sh '''
                           terraform init -backend-config=./env/${ENVIRONMENT}-backend.tfvars
                           sudo terraform apply -auto-approve -var-file=env/${ENVIRONMENT}.tfvars
                       '''
                    }
                }
            }
        }
    post {
        always {
            cleanWs()

        }

    }
}